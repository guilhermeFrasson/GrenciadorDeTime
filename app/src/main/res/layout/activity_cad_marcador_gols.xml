<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cadastro.CadMarcadorGols">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tela"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cabecalho"
            android:padding="16dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:text="Novo Destaque"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/botao_em_tela"
                android:drawableLeft="@drawable/btnsalvar"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/Jogador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:text="Jogador"
                android:textColor="@color/corTexto"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/JogadorSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jogador" />

            <TextView
                android:id="@+id/labelGols"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:text="Gols:"
                android:textColor="@color/corTexto"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenosGols"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botao_em_tela"
                    android:drawableLeft="@drawable/menos"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/txtGols"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnMaisGols"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botao_em_tela"
                    android:drawableLeft="@drawable/btnadicionar"
                    android:padding="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/labelAssistencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:text="Assistencias:"
                android:textColor="@color/corTexto"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenosAssistencias"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botao_em_tela"
                    android:drawableLeft="@drawable/menos"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/txtAssistencias"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnMaisAssistencias"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/botao_em_tela"
                    android:drawableLeft="@drawable/btnadicionar"
                    android:padding="8dp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkGolContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gol contra" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>