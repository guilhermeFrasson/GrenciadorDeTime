<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.info.InfoJogador"
    android:padding="24dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Jogador"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/barra"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="____________________________"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/barra"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textNomeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Time"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/jogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textNomeTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textNomeJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Jogador"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/jogador"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/posicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posicao:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textNomeJogador"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textPosicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posicao"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/posicao"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pernaDominante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perna dominante:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textPosicao"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textPernaDominante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perna Dominante"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/pernaDominante"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/qtdGols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de gols:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textPernaDominante"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textGols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gols"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/qtdGols"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/qtdAssistencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de assistencias:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textGols"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textAssistencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assistencias"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/qtdAssistencias"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="idade:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textAssistencias"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idade"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/idade"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/painelInferior"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/botao_em_tela"
            android:drawableLeft="@drawable/btndelete"
            android:visibility="gone"
            android:padding="8dp"
            android:tooltipText="Adicionar gols e assistencias"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>